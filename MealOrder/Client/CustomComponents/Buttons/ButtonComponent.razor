@inherits BaseButtonComponent

<button 
    class="btn btn-@Color" 
    type="submit" 
    disabled="@IsBusy"
    onclick="@OnClick"
    title="@ToolTipStr"
>

    <span class="fa fa-@Icon"></span>

    @if (IsBusy)
    {
        <span class="spinner-border spinner-border-sm mr-1"></span>
    }

    @Caption
</button>
